<?xml version='1.0' encoding='utf-8'?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

   <class name="com.hibernate.UserDetails" table="userDetails" schema="demodb">

        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="age">
            <column name="age" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="address">
            <column name="address" sql-type="varchar(255)" not-null="true"/>
        </property>

       <property name="user">
           <column name="user" sql-type="varchar(255)" not-null="true"/>
       </property>


    </class>


</hibernate-mapping>